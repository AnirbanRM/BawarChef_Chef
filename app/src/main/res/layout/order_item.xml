<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/textbox_design"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:translationZ="20dp"
    >

    <ImageView
        android:id="@+id/dp"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/person"
        android:layout_margin="5dp"
        app:tint="@color/button_color" />

    <TextView
        android:id="@+id/orderno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        android:text="Order no"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="14sp"
        android:fontFamily="@font/raleway_regular"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/orderDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/orderno"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Order DateTime"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="14sp"
        android:fontFamily="@font/raleway_regular"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/dp"
        app:layout_constraintTop_toBottomOf="@id/orderno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:text="FirstName LastName"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="14sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="Price"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="14sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/price"
        app:layout_constraintBottom_toBottomOf="@id/price"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="Statusss"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="14sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@android:color/black"
        />



</androidx.constraintlayout.widget.ConstraintLayout>